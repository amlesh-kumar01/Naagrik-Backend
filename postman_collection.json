              "mode": "raw",
              "raw": "{\n  \"content\": \"I have also noticed this issue in the area. It's been a safety concern for pedestrians.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/comments/issues/{{issueId}}/comments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "comments", "issues", "{{issueId}}", "comments"]
            }
          }
        },
        {
          "name": "Update Comment",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Updated comment: I have also noticed this issue in the area and it affects the entire community.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/comments/{{commentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "comments", "{{commentId}}"]
            }
          }
        },
        {
          "name": "Flag Comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Inappropriate content\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/comments/{{commentId}}/flag",
              "host": ["{{baseUrl}}"],
              "path": ["api", "comments", "{{commentId}}", "flag"]
            }
          }
        }
      ]
    },
